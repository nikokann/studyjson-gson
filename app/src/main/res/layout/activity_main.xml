<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/json_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="json -> class"
        app:layout_constraintBottom_toTopOf="@+id/json_change_list_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/json_change_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="json -> class(List)"
        app:layout_constraintBottom_toTopOf="@+id/output_textview"
        app:layout_constraintEnd_toEndOf="@+id/json_change_button"
        app:layout_constraintStart_toStartOf="@+id/json_change_button"
        app:layout_constraintTop_toBottomOf="@+id/json_change_button" />

    <TextView
        android:id="@+id/output_textview"
        android:layout_width="52dp"
        android:layout_height="18dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/json_change_button"
        app:layout_constraintStart_toStartOf="@+id/json_change_button"
        app:layout_constraintTop_toBottomOf="@+id/json_change_list_button" />
</androidx.constraintlayout.widget.ConstraintLayout>